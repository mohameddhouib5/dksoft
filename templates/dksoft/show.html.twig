{% extends 'base.html.twig' %}

{% block title %}
    {{ article.title }}
{% endblock %}

{% block head %}
    <img src="https://www.dksoft.tn/wp-content/uploads/2022/02/logo-dk.png" />
{% endblock %}

{% block body %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:image" content="https://www.dksoft.tn/wp-content/uploads/2022/02/logo-dk.png" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <h1 style="text-align:center;margin-top:2rem;font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">{{ article.title }}</h1>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card mb-3"style="border:none">
                    <div class="row no-gutters">
                        <div class="col-md-1">
                            <img src="{{ article.image }}" alt="" style=" margin-left:-300px;height:30rem;width:20rem">
                            <img src="{{ article.image }}" alt="" style="height:30rem;width:45.5rem;filter: blur(150px);margin-top:-20rem">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h2 class="card-title">{{ article.title }}</h2>

                                <div class="metadata mb-3">
                                    service created at {{ article.createdAt|date('d-m-Y') }} at {{ article.createdAt|date('H:i') }}
                                    <span class="badge badge-danger">{{ article.category.title }}</span>
                                </div>

                                <div class="content">
                                    <p>{{ article.content }}</p>
                                    <h3>{{ article.price }}</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="text-center">
                    <a href="{{ path('edit_article', {'id': article.id}) }}" class="btn btn-success mr-2">Update</a>
                    <a href="{{ path('article_delete', {'id': article.id}) }}" class="btn btn-danger">Delete</a>
                    <a href="{{ path('app_dksoft') }}" class="btn btn-info mr-2">See the  home page</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
{% endblock %}
